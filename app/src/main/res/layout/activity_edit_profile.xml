<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivities.EditProfileActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/edit_profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_25"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мій профіль"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваше ім'я"
            android:layout_gravity="center|top"
            android:textSize="16dp"
            />
        <EditText
            android:hint="   Name"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|top"
            android:background="@drawable/settings_edit_text"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер телефону"
            android:layout_gravity="center|top"
            android:textSize="16dp"
            />
        <EditText
            android:hint="   Phone number (0931234567)"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|top"
            android:background="@drawable/settings_edit_text"
            />
    </FrameLayout>
    <!-- TODO: Update blank fragment layout -->
</LinearLayout>