<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivities.EditProfileActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/edit_profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:src="@drawable/baseline_arrow_back_25"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мій профіль"

            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins"
            android:text="Ваше ім'я"
            android:textAlignment="center"
            android:textColor="#505050"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Ваше ім'я"
            android:textColor="#121212"
            android:fontFamily="@font/poppins"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins"
            android:text="Номер телефону"
            android:textAlignment="center"
            android:textColor="#505050"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_profile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="093 123 45 67"
            android:inputType="number"
            android:textColor="#121212"
            android:fontFamily="@font/poppins" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins"
            android:text="Електронна пошта"
            android:textAlignment="center"
            android:textColor="#505050"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="093 123 45 67"
            android:textColor="#121212"
            android:fontFamily="@font/poppins" />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_profile_editButton"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="#8692F7"
            android:text="Змінити профіль"
            app:cornerRadius = "20dp" />
        <FrameLayout
            android:background="@drawable/editrectangle"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:elevation="15dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_profile_deleteButton"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="Видалити аккаунт"
                app:cornerRadius = "20dp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>