<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivities.EditProfileActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/edit_profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_25"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мій профіль"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваше ім'я"
            android:layout_marginLeft="30dp"
            android:layout_gravity="top"
            android:textSize="16dp"
            />
        <EditText
            android:backgroundTint="@color/black"
            android:hint="Name"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|top"

            />
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер телефону"
            android:layout_gravity="center|top"
            android:textSize="16dp"
            />
        <EditText
            android:hint="   Phone number (0931234567)"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|top"
            android:background="@drawable/settings_edit_text"
            />
    </FrameLayout>
    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Електрона пошта"
            android:layout_gravity="center|top"
            android:textSize="16dp"
            />
        <EditText
            android:hint="   Email (example@gmail.com)"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|top"
            android:background="@drawable/settings_edit_text"
            />
    </FrameLayout>
    <Button
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/settings_changeProfile"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#495BAD"
        android:text="Зберегти зміни"
        app:cornerRadius = "20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wave123"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:text="  Видалити аккаунт"
            android:layout_width="220dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="bottom"
            android:layout_marginTop="200dp"
            android:backgroundTint="#AB2940"
            app:cornerRadius = "20dp"
            />

    </LinearLayout>
</LinearLayout>